// Beginner Array methods
let arr = ["apple","ball","cat","dog"]
let adding = arr.splice(1,0,"boy") // add elements 
let replace = arr.splice(1,1,"Angry") // replaing new element in old element place
let remove_N_Elements = arr.splice(2,2) // removing n elements
console.log(arr)
------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
let arr = ["apple","ball","ball","cat"]

let firstIndexOfEl = arr.findIndex((eachElement)=>{
  if(eachElement==="ball"){
    return true
  }
  else{
    return false
  }
}
)
console.log(firstIndexOfEl)

//type 2
let arr = ["apple","ball","ball","cat"]

let firstIndexOfEl = arr.findIndex(function(eachElement){
    if(eachElement==="ball"){
    return true
  }
  else{
    return false
  }
}
)
console.log(firstIndexOfEl)
