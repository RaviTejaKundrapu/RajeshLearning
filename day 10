//includes - returns boolean value
let arr1 = ["apple","ball","ball","cat"]
console.log(arr1.includes("apple")) 

// find() - returns the rlrmrnt that satistied condition
const array = [5, 12, 8, 130, 44];
const found = array.find((elements) => elements > 10)
console.log(found);

//join() - replace the seperator with user given string
let arr2 = ["apple","ball","cat"]
let joinEls = arr2.join(" - ")
console.log(joinEls)

//concat()
let array1 = ["apple","ball","ball","cat"]
let array2 = [5, 12, 8, 130, 44]
let array3 = array1.concat(array2)
console.log(array3)

//sort() small to big
const array11 = [1,3,2,4,0];
array11.sort();
console.log(array11);

// slice
const array12 = [1,3,2,4,0]
console.log(array12.slice(1,2));

//shift()
const array13 = ["apple","ball","cat"];
console.log(array13)
const firstElement = array13.shift();
console.log(firstElement);
console.log(array13)

//unshift()
const array14 = ["apple","ball","cat"];
const AddElementAtfirst = array14.unshift("angry","amjur");
console.log(array14)
